<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-feature android:name="android.hardware.camera" android:required="false" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BankingUI">

        <!-- Splash Screen - LAUNCHER -->
        <activity
            android:name=".activities.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.BankingUI">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Banking Main Screen -->
        <activity
            android:name=".activities.BankingMainActivity"
            android:exported="true"
            android:theme="@style/Theme.BankingUI" />

        <!-- Sign In Screen -->
        <activity
            android:name=".activities.SignInActivity"
            android:exported="false"
            android:theme="@style/Theme.BankingUI" />

        <!-- Sign Up Screen -->
        <activity
            android:name=".activities.SignUpActivity"
            android:exported="false"
            android:theme="@style/Theme.BankingUI" />

        <!-- Overview Screen -->
        <activity
            android:name=".activities.OverviewActivity"
            android:exported="false"
            android:theme="@style/Theme.BankingUI" />

        <!-- Face Scan (eKYC photo capture) -->
        <activity
            android:name=".activities.FaceScanActivity"
            android:exported="false"
            android:theme="@style/Theme.BankingUI" />

        <!-- eKYC Waiting for FCM result -->
        <activity
            android:name=".activities.EkycWaitingActivity"
            android:exported="false"
            android:theme="@style/Theme.BankingUI" />

        <!-- eKYC Login - Email input -->
        <activity
            android:name=".activities.EkycLoginEmailActivity"
            android:exported="false"
            android:theme="@style/Theme.BankingUI" />

        <!-- eKYC Login - Face scan & upload -->
        <activity
            android:name=".activities.EkycLoginFaceScanActivity"
            android:exported="false"
            android:theme="@style/Theme.BankingUI" />

        <!-- Face Scan Screen (Compose) - standalone use -->
        <activity
            android:name=".activities.MainActivity"
            android:exported="false"
            android:theme="@style/Theme.BankingUI" />

        <!-- Firebase Cloud Messaging Service -->
        <service
            android:name=".service.MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>